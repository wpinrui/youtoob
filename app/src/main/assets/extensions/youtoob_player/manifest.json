{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "YouToob Player Controls",
  "description": "Custom YouTube player controls with double-tap skip, speed selector, and quality controls",
  "permissions": [],
  "browser_specific_settings": {
    "gecko": {
      "id": "youtoob-player@wpinrui.com",
      "strict_min_version": "113.0"
    },
    "gecko_android": {
      "strict_min_version": "113.0"
    }
  },
  "content_scripts": [
    {
      "js": [
        "scripts/content_script.js"
      ],
      "matches": [
        "*://*.youtube.com/*",
        "*://m.youtube.com/*"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "scripts/player.js"
      ],
      "matches": [
        "*://*.youtube.com/*"
      ]
    }
  ]
}
