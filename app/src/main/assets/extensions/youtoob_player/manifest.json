{
  "manifest_version": 2,
  "name": "Youtoob Player",
  "version": "1.0",
  "description": "Custom player controls for YouTube",
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "youtoob-player@youtoob.app",
      "strict_min_version": "102.0"
    },
    "gecko_android": {
      "strict_min_version": "113.0"
    }
  }
}
